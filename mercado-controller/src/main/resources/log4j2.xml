<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<File name="LogFile" fileName="src/main/resources/logs/mercado-controller.log"
			append="false">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
		</File>
		<File name="HibernateLogFile"
			fileName="src/main/resources/logs/mercado-simulator-hibernate.log">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="LogFile" />
		</Root>
		<Logger name="org.hibernate" level="info" additivity="false">
			<AppenderRef ref="HibernateLogFile" />
		</Logger>
	</Loggers>
</Configuration>