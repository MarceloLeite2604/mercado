<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="mercadoPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.AccountPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.BalancePO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.BalanceIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.ClassPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.ClassIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.ParameterPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.ParameterIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.PropertyPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.StrategyPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.StrategyIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TemporalTickerPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TemporalTickerIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TickerPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TickerIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TradePO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TradeIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.VariablePO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.VariableIdPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TapiInformationPO</class>
		<class>org.marceloleite.mercado.databaseretriever.persistence.objects.TapiInformationIdPO</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/mercado" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>
	</persistence-unit>
</persistence>
